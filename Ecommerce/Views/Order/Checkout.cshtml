@model Order
@using Ecommerce.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Order Details";
}
@{

    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");

    if (products == null)
    {
        products = new List<Products>();

    }

}


<br />
<br />
<h2 class=" text-info"> Order Details</h2>
<form enctype="multipart/form-data" method="post" asp-action="Deatils">
    <div class=" p-4 rounded border">
        <div asp-validation-summary="All" class="text-bg-danger">
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"> </label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="id" />
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PhoneNo"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PhoneNo" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email"> </label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="ProductTypeid" asp-items="ViewBag.productTypeid" class="form-control">
                        </select>*@
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OrderDate"> </label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="ProductTypeid" asp-items="ViewBag.productTypeid" class="form-control">
                        </select>*@
                        <input asp-for="OrderDate" class="form-control" />
                    </div>
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <br />
                <br />

            </div>
            <div class="col-6">
                <table class=" table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in products)
                        {
                            <tr>
                                <td>
                                    <img src="~/@item.Image" height="100px" width="150px" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                <div style="text-align:right">
                    <h3> Total Price: @products.Sum(c=>c.Price)</h3>
                </div>
                <div class="form-group" style="text-align:right">
                    <input type="submit" value="Place Order" class="btn btn-success" />
                </div>
            </div>

        </div>
    </div>
</form>
